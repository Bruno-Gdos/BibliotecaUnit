@page
@model BibliotecaUnit.Pages.UploadModel
@{
}

<h1>Adcionar livros</h1>


<hr />
<div class="row">
    <div class="row">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <div class="col-md-10">
                    <p>Adcionar arquivo:</p>
                    <input type="hidden" asp-for="@Model.ID" value="@Model.myID" />
                    <input asp-for="file" required class="form-control" accept=".pdf" type="file" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input class="btn btn-success" type="submit" value="Upload" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Privacy">Voltar para a biblioteca</a>
</div>